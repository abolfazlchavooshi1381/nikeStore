<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_bottom_sheet"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/fragmentReportBottomSheet_titleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/error_logs"
                android:textAppearance="?textAppearanceHeadline6"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="@+id/fragmentReportBottomSheet_titleTv"
                app:layout_constraintStart_toStartOf="@+id/fragmentReportBottomSheet_titleTv"
                app:layout_constraintTop_toBottomOf="@+id/fragmentReportBottomSheet_titleTv">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fragmentInventoryBottomSheet_sendCL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/fragmentReportBottomSheet_sendIv"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_round_send_24"
                        app:tint="@color/green"
                        app:layout_constraintEnd_toEndOf="@+id/fragmentReportBottomSheet_sendTv"
                        app:layout_constraintStart_toStartOf="@+id/fragmentReportBottomSheet_sendTv"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/fragmentReportBottomSheet_sendTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/send_report_file"
                        android:textAlignment="center"
                        android:textAppearance="?textAppearanceBody2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fragmentReportBottomSheet_sendIv"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fragmentReportBottomSheet_showReportCl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/fragmentReportBottomSheet_showReportIv"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_round_bug_report_24"
                        app:layout_constraintEnd_toEndOf="@+id/fragmentReportBottomSheet_showReportTv"
                        app:layout_constraintStart_toStartOf="@+id/fragmentReportBottomSheet_showReportTv"
                        app:tint="@color/blue"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/fragmentReportBottomSheet_showReportTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/read_report_file"
                        android:textAlignment="center"
                        android:textAppearance="?textAppearanceBody2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fragmentReportBottomSheet_showReportIv"
                        tools:ignore="MissingConstraints" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fragmentInventoryBottomSheet_deleteCL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/fragmentReportBottomSheet_deleteIv"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/round_delete_24"
                        app:tint="@color/red"
                        app:layout_constraintEnd_toEndOf="@+id/fragmentReportBottomSheet_deleteTv"
                        app:layout_constraintStart_toStartOf="@+id/fragmentReportBottomSheet_deleteTv"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/fragmentReportBottomSheet_deleteTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/delete_report_file"
                        android:textAlignment="center"
                        android:textAppearance="?textAppearanceBody2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fragmentReportBottomSheet_deleteIv"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>